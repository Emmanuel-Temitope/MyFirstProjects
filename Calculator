first_number = (input("Enter your first digit or digits: "))
operator = (input("choose your operator: +,-,*,/" + "  ==>"))
second_number = (input("Enter your second digit or digits: "))

if operator == '+':
    sum = int(first_number) + int(second_number)
    print("The sum is : " + str(sum))

elif operator == '-':
    sub = int(first_number) + int(second_number)
    print('The subtraction is : ' + str(sub))

elif operator == '*':
    product = int(first_number) * int(second_number)
    print("The product is :" + str(product))

elif operator == '/':
    division = int(first_number) / int(second_number)
    print("The division is : " + str(division))
else:
    print("Unknown Error!")
